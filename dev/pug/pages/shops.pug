extends ../layout/main

block variables
	- var title = 'Где купить';
	- var breadcrumbsMod = '_white';
block libs-js
	script(src="https://api-maps.yandex.ru/2.1/?apikey=ваш API-ключ&lang=ru_RU")
	script(src="./js/shops.js")

block content
	include ../modules/header
	main
		.container 
			include ../modules/breadcrumbs
			.banner-head(style="background-image: url('./img/content/shops/banner.png');")
			h1.hide= title
			.seo-text
				.zag Где приобрести наши изделия?
