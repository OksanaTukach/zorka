				a.shops-item(href="#") 
					img(src="img/content/shops/shops1.png", alt="")
				a.shops-item(href="#") 
					img(src="img/content/shops/shops2.png", alt="")
				a.shops-item(href="#") 
					img(src="img/content/shops/shops3.png", alt="")
			.shops-list-map 
				.shops-list
					.shops-list__items 
						.shops-list__item.js-accordion._open
							.shops-list__item-head.js-accordion-head 
								div Список магазинов Минска 
									+icon('skupka-arr')
