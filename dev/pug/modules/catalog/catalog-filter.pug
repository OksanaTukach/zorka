.catalog-filter
  .gray-block
    .catalog-filter__title Фильтр по товарам
    button.catalog-filter__close.js-filter
  .catalog-filter__group._open.js-accordion
    .catalog-filter__title.js-accordion-head Название группы
      +icon('arr-down')
    .catalog-filter__body.js-accordion-body
      -for(let i=0; i<15; i++)
        div(class="catalog-filter__group-row js-accordion" + (i<5? '' : ' more-hidden hidden'))
          .catalog-filter__group-head
            label.checkbox
              input(type="checkbox" name="")
              span.checkbox-tick
              span.checkbox-text Название элемента
            .catalog-filter__group-btn.js-accordion-head
              +icon('arr-down')
          .catalog-filter__group-body.js-accordion-body
            .catalog-filter__group-row
              label.checkbox
                input(type="checkbox" name="")
                span.checkbox-tick
                span.checkbox-text Серьги парные
            .catalog-filter__group-row
              label.checkbox
                input(type="checkbox" name="")
                span.checkbox-tick
                span.checkbox-text Подвеска для браслетов и шармы
            .catalog-filter__group-row
              label.checkbox
                input(type="checkbox" name="")
                span.checkbox-tick
                span.checkbox-text Кольцо помолвочное
      .catalog-filter__group-more
        button.link.js-show-more
          span.hidden Скрыть
          span Показать все
  each item in filters
    .catalog-filter__group._open.js-accordion
      .catalog-filter__title.js-accordion-head #{item.title}
        +icon('arr-down')
      .catalog-filter__body.js-accordion-body
        each unit in item.types
          .catalog-filter__group-row.js-accordion
            .catalog-filter__group-head
              label.checkbox
                input(type="checkbox" name="")
                span.checkbox-tick
                span.checkbox-text #{unit}
              .catalog-filter__group-btn.js-accordion-head
                +icon('arr-down')
            .catalog-filter__group-body.js-accordion-body
              .catalog-filter__group-row
                label.checkbox
                  input(type="checkbox" name="")
                  span.checkbox-tick
                  span.checkbox-text Серьги парные
              .catalog-filter__group-row
                label.checkbox
                  input(type="checkbox" name="")
                  span.checkbox-tick
                  span.checkbox-text Подвеска для браслетов и шармы
              .catalog-filter__group-row
                label.checkbox
                  input(type="checkbox" name="")
                  span.checkbox-tick
                  span.checkbox-text Кольцо помолвочное
  .catalog-filter__group._open.js-accordion
    .catalog-filter__title.js-accordion-head Вес, г
      +icon('arr-down')
    .js-accordion-body.js-ui-group
      .ui-input__wrap
        label.ui-input
          span От
          input(type="number" name="" min="0.1" max="999" step="0.01").js-input-min
        | —
        label.ui-input
          span До
          input(type="number" name="" min="0.2" max="1000" step="0.01").js-input-max
      .js-ui-slider
  .gray-block
    button(type="reset").catalog-filter__title.catalog-filter__reset Очистить фильтр
